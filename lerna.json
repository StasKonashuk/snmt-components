{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "packages": ["src/packages/*"],
  "npmClient": "npm",
  "command": {
    "publish": {
      "skipPrompt": true,
      "npmClientArgs": ["--legacy-peer-deps"]
    },
    "changed": {
      "skipPrompt": true,
      "npmClientArgs": ["--legacy-peer-deps"]
    }
  }
}
